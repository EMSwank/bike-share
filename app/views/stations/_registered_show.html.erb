<div class="hero">
  <div class="hero-body">
    <div class="container is-widescreen">
      <div class="notification">
          <table class='table is-fullwidth'>
            <tr>
              <th>Name</th>
              <th>Dock Count</th>
              <th>City</th>
              <th>Installation Date</th>
              <% if current_admin? %>
              <td rowspan="2">
                <div class="box has-text-centered">
                <%= button_to  "Edit", edit_admin_station_path(@station.id), method: :get, class: 'button is-medium is-info'%>
              </div>
              </td>
              <td rowspan="2">
                <div class="box has-text-centered">
                <%= button_to  "Delete", admin_station_path(@station), method: :delete, class: 'button is-medium is-danger' %>
                </div>
              </td>
              <% end %>
            </tr>
            <tr>
              <td><%= @station.name %></td>
              <td><%= @station.dock_count %></td>
              <td><%= @station.city %></td>
              <td><%= @station.installation_date.strftime('%b %d %Y') %></td>
            </tr>
          </table>
        </div>
        <div class="notification">
          <table class="table is-fullwidth is-striped">
            <thead>
              <th>Analysis</th>
            </thead>
            <tbody>
              <tr>
                <td>Trips started at this station</td>
                <td><%= @station.trips_started_at.length %></td>
              </tr>
              <tr>
                <td>Trips ended at this station</td>
                <td><%= @station.trips_ended_at.length %></td>
              </tr>
              <tr>
                <td>Most frequent origin station to here</td>
                <% if @station.trips_ended_at.empty? %>
                  <td>None</td>
                <% else %>
                  <td><%= @station.most_frequent_origin.name %></td>
                <% end %>
              </tr>
              <tr>
                <td>Most frequent destination station from here</td>
                <% if @station.trips_started_at.empty? %>
                  <td>None</td>
                <% else %>
                  <td><%= @station.most_frequent_destination.name %></td>
                <% end %>
              </tr>
              <tr>
                <td>Date with the highest number of trips started here</td>
                <% if @station.trips_started_at.empty? %>
                  <td>None</td>
                <% else %>
                  <td><%= @station.most_popular_date.strftime('%b %d %Y') %></td>
                <% end %>
              </tr>
              <tr>
                <td>Most Frequent Zip Code</td>
                <% if @station.trips_started_at.empty? %>
                  <td>None</td>
                <% else %>
                  <td><%= @station.most_frequent_origin_zip_code %></td>
                <% end %>
              </tr>
              <tr>
                <td>ID of bike most frequently starting trips here</td>
                <% if @station.trips_started_at.empty? %>
                  <td>None</td>
                <% else %>
                  <td><%= @station.most_frequent_origin_bike_id %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
        </div>
    </div>
</div>
