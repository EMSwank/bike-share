<h1 class='title'>Conditions Dashboard</h1>

<% @all_trips_by_temp.each_pair do |temp, ride| %>
  <% if ride[0].keys[0] != nil %>
    <h2 class='subtitle'>Trip Stats for Days in the <%= temp %>s</h2>
    Most rides for <%= temp %> degree weather: <%= ride[0].keys[0] %>, on <%= ride[0].values[0][0].strftime("%B %d, %Y") %>, at <%= ride[0].values[0][1] %><br>
    Least rides for <%= temp %> degree weather: <%= ride[1].keys[0] %>, on <%= ride[1].values[0][0].strftime("%B %d, %Y") %>, at <%= ride[1].values[0][1] %><br>
    Average rides per day for <%= temp %> degree weather: <%= ride[2].round(1) %> <br><br>
  <% end %>
<% end %>
<% @all_trips_by_precipitation.each_pair do |inches, ride| %>
  <h2 class='subtitle'>Trip Stats for Precipitation between <%= inches %> and <%= inches + 0.5 %> inches</h2>
  <% if ride[0].keys[0] != nil %>
    Most rides: <%= ride[0].keys[0] %> on <%= ride[0].values[0][0].strftime("%B %d, %Y") %> at <%= ride[0].values[0][1].round(1) %> inches <br>
    Least rides: <%= ride[1].keys[0] %> on <%= ride[1].values[0][0].strftime("%B %d, %Y") %> at <%= ride[1].values[0][1].round(1) %> inches <br>
    Average daily rides for this precipitation: <%= ride[2].round(1) %> <br>
  <% else %>
    No rides at this precipitation
  <% end %><br><br>
<% end %>
