<section id="grad" class="hero">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <div class="box">
                    <%= form_tag login_path do %>
                        <div class="field">
                            <div class="control">
                                <%= label_tag :user_name %>
                                    <%= text_field_tag :user_name, "", class: "input is-large" %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= label_tag :password %>
                                    <%= password_field_tag :password, "", class: "input is-large" %>
                            </div>
                        </div>
                        <div id="log-in-button">
                            <%= submit_tag 'Login', class: "button is-block is-info is-large is-fullwidth" %>
                        </div>
                        <div class='sub-title'>
                            <%= link_to 'Create Account', new_user_path %>
                        </div>
                        <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<script async type="text/javascript" src="../js/bulma.js"></script>