<div class="container">
  <section class="hero is-small is-primary is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title is-size-1 has-text-centered has-text-weight-bold">Edit Trip <%=@trip.id%></h1>
      </div>
    </div>
  </section>

  <div class="container has-text-centered">
    <div class="column is-4 is-offset-4">
      <div class="box">
        <%= form_for [:admin, @trip] do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :duration %>
              <%= f.number_field :duration, class: "input is-medium,", placeholder: "Trip Duration" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :start_date %>
              <%= f.date_field :start_date, class: "input is-medium", placeholder: "Start Date" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :start_station_name %>
              <%= f.text_field :start_station_name, class: "input is-medium", placeholder: "Start Station Name" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :start_station_id%>
              <%= f.number_field :start_station_id, class: "input is-medium", placeholder: "Start Station ID" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :end_date %>
              <%= f.date_field :end_date, class: "input is-medium", placeholder: "End Date" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :end_station_name %>
              <%= f.text_field :end_station_name, class: "input is-medium" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :end_station_id %>
              <%= f.number_field :end_station_id, class: "input is-medium" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :bike_id %>
              <%= f.number_field :bike_id, class: "input is-medium", placeholder: "Bike ID" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :subscription_type %>
              <%= f.text_field :subscription_type, class: "input is-medium", placeholder: "Subscription Type" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :zip_code %>
              <%= f.number_field :zip_code, class: "input is-medium", placeholder: "Zip Code" %>
            </div>
          </div>
          <%= f.submit class: "button is-block is-info is-medium is-fullwidth" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script async type="text/javascript" src="../js/bulma.js"></script>