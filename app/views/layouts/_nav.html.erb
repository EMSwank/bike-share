<nav class="navbar is-transparent">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item has-text-white" href="<%= root_path %>" style="font-weight:bold;">
        BikeShare
      </a>
      <span class="navbar-burger burger" data-target="navMenu">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </div>
    <div id="navMenu" class="navbar-menu">
      <div class="navbar-start">
        <%= link_to 'Stations', stations_path, class: 'navbar-item has-text-white' %>
          <%= link_to 'Trips', trips_path, class: 'navbar-item has-text-white' %>
            <%= link_to 'Conditions', conditions_path, class: 'navbar-item has-text-white' %>
              <%= link_to 'Bike Shop', bike_shop_path, class: 'navbar-item has-text-white' %>
      </div>

      <div class="navbar-end">
        <%= link_to "Cart: #{@cart.total_count}", cart_path, class: "navbar-item has-text-white" %>
          <% if current_admin? %>
            <%= link_to "Logged in as Admin User: #{current_user.user_name}", admin_dashboard_index_path, class: 'navbar-item has-text-white' %>
              <%= link_to 'Log Out', logout_path, class: 'navbar-item has-text-white'%>
                <% elsif current_user %>
                  <%= link_to "Logged in as #{current_user.user_name}", dashboard_path, class: "navbar-item has-text-white" %>
                    <%= link_to 'Log Out', logout_path, class: 'navbar-item has-text-white'%>
                      <% else %>
                        <%= link_to 'Sign Up', new_user_path, class: 'navbar-item has-text-white'%>
                          <%= link_to 'Log In', login_path, class: 'navbar-item has-text-white'%>
                            <% end %>
      </div>
    </div>
  </div>
</nav>
<script type="text/javascript">
  (function () {
    var burger = document.querySelector('.burger');
    var nav = document.querySelector('#' + burger.dataset.target);

    burger.addEventListener('click', function () {
      burger.classList.toggle('is-active');
      nav.classList.toggle('is-active');
    });
  })();
</script>